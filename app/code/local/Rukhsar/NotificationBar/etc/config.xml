<?xml version="1.0"?>
<config>
    <modules>
        <Rukhsar_NotificationBar>
            <version>1.0.0</version>
        </Rukhsar_NotificationBar>
    </modules>

    <global>
        <blocks>
            <notificationbar>
                <class>Rukhsar_NotificationBar_Block</class>
            </notificationbar>
        </blocks>
    </global>
    <frontend>
        <layout>
            <updates>
                <notificationbar>
                    <file>notificationbar.xml</file>
                </notificationbar>
            </updates>
        </layout>
    </frontend>

    <default>
        <design>
            <notificationbar>
                <display>0</display>
                <clearcontrol>0</clearcontrol>
                <default_style>1</default_style>
                <fixed>0</fixed>
                <fixed_margin>28px</fixed_margin>
            </notificationbar>
        </design>
    </default>
</config>